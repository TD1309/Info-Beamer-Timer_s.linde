{
  "name": "Timer",
  "control_ui": "controls.html",
  "permissions": {
  "input": "Needs to access to keyboard"
  },
  "options": [
    {
      "title": "Timer",
      "name": "timer",
      "type": "integer",
      "default": 30
    },
    {
      "title": "Title",
      "name": "title",
      "type": "string",
      "default": "Keep the Time in Mind"
    },
    {
      "title": "Title Size",
      "name": "titlesize",
      "type": "integer",
      "default": 120
    },
    {
      "title": "Timer Size",
      "name": "timersize",
      "type": "integer",
      "default": 350
    },
    {
      "title": "Background image",
      "name": "bgimage",
      "type": "resource",
      "valid": ["image"],
      "default": "background.png"
    }
  ]
}
